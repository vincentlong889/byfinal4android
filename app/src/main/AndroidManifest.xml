<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.byfinal.demo.byfinal4android">

    <application
        android:name=".BXLApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        tools:replace="label,icon,allowBackup,hardwareAccelerated"
        tools:remove="debuggable">
        <activity
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Splash"
            android:screenOrientation="portrait"
            android:name=".home.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:name=".home.activity.MainActivity" />
        <activity
            android:label="@string/title_setting"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:name=".setting.SettingActivity" />
        <activity
            android:label="@string/title_setting"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:name=".home.activity.TestActivity" />
    </application>

</manifest>