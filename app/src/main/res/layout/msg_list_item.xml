<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/list_item_bg"
    android:orientation="horizontal">

    <ImageView
        android:src="@drawable/default_pic"
        android:scaleType="center"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <LinearLayout
        android:layout_marginLeft="14dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:maxLines="1"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textColor="@color/list_title"
                android:textSize="@dimen/list_title_font_size"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:maxLines="1"
                android:gravity="right|center_vertical"
                android:text="2016-03-03"
                android:textColor="@color/list_date"
                android:textSize="@dimen/list_date_font_size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <TextView
            android:maxLines="1"
            android:gravity="center_vertical"
            android:text="@string/list_item_default_content"
            android:textColor="@color/list_content"
            android:textSize="@dimen/list_content_font_size"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

</LinearLayout>